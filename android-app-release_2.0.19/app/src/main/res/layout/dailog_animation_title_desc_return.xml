<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
      name="title"
      type="String" />

    <variable
      name="description"
      type="String" />

    <variable
      name="buttonTitle"
      type="String" />

    <variable
      name="click"
      type="com.lifepharmacy.application.ui.utils.dailogs.ClickAnimationTitleDescActionDialog" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
      android:id="@+id/linearLayout5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/white_with_round_corner"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.19999999">


      <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:scaleType="centerInside"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_camera"
        style="@style/text_20_accent_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@{title}"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gallery"
        style="@style/text_14_1d1d_open_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_26dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@{description}"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView95"
        style="@style/text_13_blue_opnesans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->click.onClickContinue()}"
        android:paddingVertical="@dimen/dimen_16dp"
        android:text="@{buttonTitle}"
        android:textAlignment="center" />


    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>