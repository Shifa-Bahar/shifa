<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="shipmentAddress"
            type="com.lifepharmacy.application.model.address.AddressModel" />
        <variable
            name="click"
            type="com.lifepharmacy.application.ui.address.dailog.ClickLayoutAddress" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10">


                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textView23"
                            style="@style/text_14_0025_open_semi_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ship_to" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_change"
                            style="@style/text_14_0025_open_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change"
                            android:onClick="@{()->click.changeAddress()}"
                            android:textAllCaps="true" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_address_title"
                        style="@style/text_14_0025_open_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:drawableStart="@{shipmentAddress.type.equals(`Work`) ? @drawable/ic_work_location : shipmentAddress.type.equals(`Home`) ? @drawable/ic_home_location : @drawable/ic_fav_location }"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@{shipmentAddress.type}"
                        tools:drawableStart="@drawable/ic_work_location"
                        tools:text="Work" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_address"
                        style="@style/text_12_8585_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{shipmentAddress.streetAddress+`,`+shipmentAddress.area+`,`+shipmentAddress.city }"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        tools:text="Marasi Drive, Business Bay, Dubai address address address address  " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_phone"
                        style="@style/text_12_1d1d_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="+971-54-1234567" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>