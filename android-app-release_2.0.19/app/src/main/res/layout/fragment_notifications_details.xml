<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="item"
            type="com.lifepharmacy.application.model.NotificationsModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_title"
            layout="@layout/layout_top_back"
            android:layout_width="0dp"
            android:elevation="@dimen/dimen_8dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_gery_f4f4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/white_with_round_corner_10"
                    android:elevation="@dimen/dimen_2dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dimen_16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_title">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView101"
                        style="@style/text_12_blue_dark_open_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_20dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut fringilla, mi at condimentum finibus, nibh nunc aliquet nunc, ac suscipit nisl mauris nec lorem."
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView41" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView102"
                        style="@style/text_12_blue_dark_open_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_10dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut fringilla, mi at condimentum finibus, nibh nunc aliquet nunc, ac suscipit nisl mauris nec lorem."
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView41" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView44"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_190dp"
                        app:srcCompat="@drawable/banner_1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView103"
                        style="@style/text_12_b6b6_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_16dp"
                        android:text="23 Jan, 2021 5:30 PM"
                        android:textAlignment="center" />
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:background="@drawable/white_with_bottom_round_corner"
                    android:elevation="@dimen/dimen_2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView41"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_100dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/bg_e8_border_full_round"
                        android:padding="@dimen/dimen_25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_wallet_payment" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView100"
                        style="@style/text_16_accent_dark_semi_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_10dp"
                        android:text="DSF DEALS"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView41" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
